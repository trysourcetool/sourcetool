	if session.ID != id {
		t.Errorf("session.ID = %v, want %v", session.ID, id)
	}
	if session.PageID != pageID {
		t.Errorf("session.PageID = %v, want %v", session.PageID, pageID)
	}
	if session.State == nil {
		t.Error("session.State is nil")
	}
